{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "out/",
    ".eslintrc.js",
    "tailwind.config.js",
    "next.config.js"
  ],
  "rules": {
    // Global
    "prefer-const": "warn",
    "prefer-rest-params": "warn", // Allow "arguments" in functions
    "no-async-promise-executor": "off", // ability to use async for promise resolve functions
    // React
    "react/no-unescaped-entities": "off",
    // Typescript
    "@typescript-eslint/explicit-function-return-type": "warn", // make sure methods params and return types have types
    "@typescript-eslint/no-explicit-any": "off", // allow casting to any
    "@typescript-eslint/no-unused-vars": "off" // allow keeping unused vars for later use, without warning
  }
}