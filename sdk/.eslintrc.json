{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    ".eslintrc.js",
    "rollup.config.js",
    "dist.esm/*",
    "dist/*",
    "typings/*",
    "*.svelte",
    "*.css"
  ],
  "rules": {
    // Global
    "no-var": "warn",
    "prefer-spread": "warn",
    "prefer-const": "off",
    "no-async-promise-executor": "off", // ability to use async for promise resolve functions
    "no-extra-semi": "warn",
    // Typescript
    "@typescript-eslint/ban-types": "warn",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-explicit-any": "off", // allow casting to any
    "@typescript-eslint/no-namespace": "warn",
    "@typescript-eslint/no-unused-vars": "off" // allow keeping unused vars for later use, without warning
  }
}