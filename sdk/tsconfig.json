{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "target": "es2020",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "@config/*": [
        "./src/config/*"
      ],
      "@model/*": [
        "./src/model/*"
      ],
      "@services/*": [
        "./src/services/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "dist/*"
  ]
}